{
  "extends": "astro/tsconfigs/base",
  "moduleResolution": "node",
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types"],
    "importsNotUsedAsValues": "error",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@mdx/*": ["src/components/mdx/*"],
      "@layouts/*": ["src/layouts/*"],
      "@data/*": ["src/data/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
